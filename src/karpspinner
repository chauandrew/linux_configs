# Flash gyrados upon exiting
trap 'tput cup $row; tput dl 39; printf "$gyrados"; sleep 0.10; \
      tput cup $row; tput dl 39; exit 0' SIGINT

# blink between lokarp and hikarp
while true
do
    tput cup $row 
    tput dl 39
    printf "%s" "$lokarp" 
    sleep 1
    tput cup $row 
    tput dl 39
    printf "%s" "$hikarp" 
    sleep 1
done

