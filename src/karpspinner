#!/bin/bash
exec < /dev/tty

# Get cursor position
oldstty=$(stty -g)
stty raw -echo min 0
echo -en "\033[6n" > /dev/tty
# tput u7 > /dev/tty    # when TERM=xterm (and relatives)
IFS=';' read -r -d R -a pos
stty $oldstty
# change from one-based to zero based so they work with: tput cup $row $col
row=$((${pos[0]:2} - 1))    # strip off the esc-[
col=$((${pos[1]}))

# Ascii art images: 
